<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".activity.Main13Activity">
    <LinearLayout
        android:id="@+id/m13_LL_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/m13_LL_bottom"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ip地址："/>
            <EditText
                android:id="@+id/m13_et_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入服务器ip地址"
                android:text="192.168.1.100"
                android:layout_weight="8"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="端口号："/>
            <EditText
                android:id="@+id/m13_et_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=""
                android:text="8888"
                android:layout_weight="2"
                />
        </LinearLayout>
        <Button
            android:id="@+id/m13_btn_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="z连接聊天"/>
        <ScrollView
            android:id="@+id/m13_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            >
            <TextView
                android:id="@+id/m13_tv_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="聊天记录"
                android:textIsSelectable="true"
                android:paddingBottom="20dp"
                />
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/m13_LL_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:orientation="horizontal">
        <EditText
            android:id="@+id/m13_et_info"
            android:layout_width="wrap_content"
            android:layout_weight="10"
            android:hint="输入消息"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/m13_btn_submit"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="发送"/>
    </LinearLayout>
</RelativeLayout>