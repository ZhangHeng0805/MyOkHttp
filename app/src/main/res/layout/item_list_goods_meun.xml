<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="#E8FCFD"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:paddingLeft="10sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称："
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/item_goodsmeunlist_txt_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品简介："
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/item_goodsmeunlist_txt_goodsintro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_goodsmeunlist_txt_chen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/LL_num"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="×"/>
    <TextView
        android:id="@+id/item_goodsmeunlist_txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_goodsmeunlist_txt_chen"
        android:layout_marginRight="5sp"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:text="￥0元"
        />

    <LinearLayout
        android:id="@+id/LL_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <!--<Button
            android:id="@+id/item_goodsmeunlist_btn_add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_add_drawable"/>-->
        <TextView
            android:id="@+id/item_goodsmeunlist_txt_num"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="0"
            android:textSize="16sp"/>
        <!--<Button
            android:id="@+id/item_goodsmeunlist_btn_sub"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_sub_drawable"/>-->
    </LinearLayout>
</RelativeLayout>