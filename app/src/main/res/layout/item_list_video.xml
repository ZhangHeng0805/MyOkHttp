<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/bg_tv3"
    android:layout_margin="5dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:gravity="center_vertical"
    android:id="@+id/item_video_layout"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:textColor="@color/colorPrimary"
        android:layout_weight="8"
        android:textSize="20sp"
        android:text="影视名称"/>
    <TextView
        android:id="@+id/item_video_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标签"

        android:textColor="@color/white_80"
        android:background="@drawable/bg_tv1"
        android:padding="4dp"
        android:layout_marginLeft="8dp"
        android:textSize="10sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="3dp"
        android:background="@drawable/bg_tv2"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/item_video_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="2dp"
            android:src="@drawable/icon"/>
        <TextView
            android:id="@+id/item_video_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:text="影视平台"/>
    </LinearLayout>



</LinearLayout>