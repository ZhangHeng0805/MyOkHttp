<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Main14Activity">
    <Spinner
        android:id="@+id/m14_sp_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:id="@+id/m14_iv_bofang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/laba"
        android:layout_above="@id/m14_tv_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:visibility="visible"
        android:background="@drawable/btn2"
        />
    <TextView
        android:id="@+id/m14_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/black_80"
        android:text="文案"
        android:textIsSelectable="true"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/m14_btn_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn2"
        android:text="点我复制"
        android:layout_marginTop="45dp"
        android:visibility="gone"
        android:layout_below="@+id/m14_tv_content"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/m14_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="下一条"/>
</RelativeLayout>